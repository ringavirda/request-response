{
  "compilerOptions": {
    "target": "ES2023",

    "module": "ES2022",
    "moduleResolution": "Node",
    "moduleDetection": "auto",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@client/*": ["client/*"],
      "@server/*": ["server/*"]
    },
    "sourceMap": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"]
}
